wrapper()
  max-width 1230px
  width 100%
  margin-left auto
  margin-right auto
  padding 0 15px
  @media SM
    padding 0 25px
.container
  height 100%
  wrapper()
.wrapper
  clearfix()
  wrapper()

main
  display block
  max-width $wrapper
  width 100%
  padding 0 15px
  margin 0 auto
  position relative

html.flexbox
  body
    display flex
    min-height 100vh
    flex-direction column
  .container
    flex 1



